{extends '../layouts/Base.latte'}

{block content}
<div class="container">
    <div class="card">
        <h2>🗄️ Conexiones de Base de Datos</h2>
        <p class="text-muted mb-lg">
            Gestiona y monitorea las conexiones configuradas a diferentes bases de datos.
        </p>

        <!-- Estadísticas generales -->
        <div class="card mb-lg" style="background-color: var(--color-bg-light);">
            <h3>📊 Estadísticas</h3>
            <div class="flex gap-lg" style="flex-wrap: wrap;">
                <div style="flex: 1; min-width: 200px;">
                    <strong>Conexiones activas:</strong> {$stats['active_connections']}
                </div>
                <div style="flex: 1; min-width: 200px;">
                    <strong>Conexiones configuradas:</strong> {$stats['configured_connections']}
                </div>
                <div style="flex: 1; min-width: 200px;">
                    <strong>Memoria usada:</strong> {($stats['memory_usage'] / 1024 / 1024)|round:2} MB
                </div>
            </div>
        </div>

        <!-- Lista de conexiones -->
        <div class="grid" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: var(--spacing-lg);">
            {foreach $connections as $name => $connection}
                <div class="connection-card" style="
                    padding: var(--spacing-lg);
                    border: 1px solid var(--color-border);
                    border-radius: var(--border-radius);
                    {if $connection['connected']}
                        border-left: 4px solid var(--color-success);
                    {else}
                        border-left: 4px solid var(--color-error);
                    {/if}
                ">
                    <div class="flex items-center justify-between mb-md">
                        <h4 style="margin: 0;">{$name}</h4>
                        <span class="status-badge" style="
                            padding: 0.25rem 0.5rem;
                            border-radius: 0.25rem;
                            font-size: 0.75rem;
                            font-weight: 500;
                            {if $connection['connected']}
                                background-color: rgba(16, 185, 129, 0.1);
                                color: var(--color-success);
                            {else}
                                background-color: rgba(239, 68, 68, 0.1);
                                color: var(--color-error);
                            {/if}
                        ">
                            {$connection['status']}
                        </span>
                    </div>

                    <div class="connection-details" style="margin-bottom: var(--spacing-md);">
                        <p style="margin: 0.25rem 0; font-size: 0.875rem;">
                            <strong>Driver:</strong> {$connection['driver']}
                        </p>
                        <p style="margin: 0.25rem 0; font-size: 0.875rem;">
                            <strong>Host:</strong> {$connection['host']}
                        </p>
                        <p style="margin: 0.25rem 0; font-size: 0.875rem;">
                            <strong>Base de datos:</strong> {$connection['database']}
                        </p>
                    </div>

                    <form method="POST" action="/database/test-connection">
                        <input type="hidden" name="connection" value="{$name}">
                        <button type="submit" class="btn btn-secondary" style="width: 100%; font-size: 0.875rem;">
                            🔍 Probar Conexión
                        </button>
                    </form>
                </div>
            {/foreach}
        </div>

        <!-- Navegación -->
        <div class="mt-xl" style="padding-top: var(--spacing-lg); border-top: 1px solid var(--color-border);">
            <h3>🛠️ Herramientas de Base de Datos</h3>
            <div class="flex gap-md" style="flex-wrap: wrap;">
                <a href="/database/query-runner" class="btn btn-secondary">
                    📝 Ejecutor de Consultas
                </a>
                <a href="/database/examples" class="btn btn-secondary">
                    🧪 Ejemplos de Uso
                </a>
                <button onclick="location.reload()" class="btn" style="background-color: var(--color-primary);">
                    🔄 Actualizar Estado
                </button>
            </div>
        </div>
    </div>
</div>

<style>
.connection-card {
    transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.connection-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
}

.status-badge {
    text-transform: uppercase;
    letter-spacing: 0.05em;
}
</style>
{/block}