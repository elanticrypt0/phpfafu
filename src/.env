# Application Settings
APP_NAME="Docker PHP API"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8080

# Database Configuration - Default/Primary Connection
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=docker_php_api
DB_USERNAME=root
DB_PASSWORD=root_password

# Logging Settings
LOG_QUERIES=false
LOG_SLOW_QUERIES=true
SLOW_QUERY_THRESHOLD=2000

# Cache Settings
CACHE_DRIVER=file
CACHE_PREFIX=docker_php_api

# Development Tools
XDEBUG_ENABLED=true
XDEBUG_HOST=host.docker.internal
XDEBUG_PORT=9003