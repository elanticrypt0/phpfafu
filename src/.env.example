# Application Settings
APP_NAME="Docker PHP API"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8080

# Database Configuration - Default/Primary Connection
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=docker_php_api
DB_USERNAME=root
DB_PASSWORD=root_password

# Database Configuration - Secondary Connection (Example)
DB_SECONDARY_CONNECTION=mysql
DB_SECONDARY_HOST=db_secondary
DB_SECONDARY_PORT=3306
DB_SECONDARY_DATABASE=secondary_db
DB_SECONDARY_USERNAME=secondary_user
DB_SECONDARY_PASSWORD=secondary_password

# Database Configuration - Analytics Connection (Example)
DB_ANALYTICS_CONNECTION=mysql
DB_ANALYTICS_HOST=analytics_db
DB_ANALYTICS_PORT=3306
DB_ANALYTICS_DATABASE=analytics
DB_ANALYTICS_USERNAME=analytics_user
DB_ANALYTICS_PASSWORD=analytics_password

# Database Configuration - SQLite Example
DB_SQLITE_CONNECTION=sqlite
DB_SQLITE_DATABASE=/var/www/html/storage/database.sqlite

# Database Configuration - PostgreSQL Example
DB_POSTGRES_CONNECTION=pgsql
DB_POSTGRES_HOST=postgres_host
DB_POSTGRES_PORT=5432
DB_POSTGRES_DATABASE=postgres_db
DB_POSTGRES_USERNAME=postgres_user
DB_POSTGRES_PASSWORD=postgres_password

# Logging Settings
LOG_QUERIES=false
LOG_SLOW_QUERIES=true
SLOW_QUERY_THRESHOLD=2000

# Cache Settings
CACHE_DRIVER=file
CACHE_PREFIX=docker_php_api

# Session Settings
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Mail Configuration (Optional)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=hello@example.com
MAIL_FROM_NAME="${APP_NAME}"

# Redis Configuration (Optional)
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# API Settings
API_VERSION=v1
API_RATE_LIMIT=60
API_RATE_LIMIT_WINDOW=1

# JWT Configuration (if using JWT)
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=3600

# File Storage
STORAGE_DRIVER=local
STORAGE_PATH=/var/www/html/storage

# Development Tools
XDEBUG_ENABLED=true
XDEBUG_HOST=host.docker.internal
XDEBUG_PORT=9003