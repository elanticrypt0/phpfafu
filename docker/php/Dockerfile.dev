# ./docker/php/Dockerfile.dev
FROM dunglas/frankenphp:php8.2-alpine

# Instalar dependencias del sistema
RUN apk add --no-cache \
    git \
    zip \
    unzip \
    libzip-dev \
    $PHPIZE_DEPS

# Instalar y habilitar extensiones PHP
RUN install-php-extensions \
    pdo \
    pdo_mysql \
    zip \
    xdebug

# Configurar Xdebug para desarrollo
RUN echo "xdebug.mode=develop,debug" >> /usr/local/etc/php/conf.d/docker-php-ext-xdebug.ini \
    && echo "xdebug.client_host=host.docker.internal" >> /usr/local/etc/php/conf.d/docker-php-ext-xdebug.ini \
    && echo "xdebug.start_with_request=yes" >> /usr/local/etc/php/conf.d/docker-php-ext-xdebug.ini \
    && echo "xdebug.log=/tmp/xdebug.log" >> /usr/local/etc/php/conf.d/docker-php-ext-xdebug.ini

# Instalar Composer
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# Configurar PHP para desarrollo
COPY ./docker/php/php.dev.ini /usr/local/etc/php/conf.d/custom.ini

# Configurar Caddyfile para desarrollo con hot reload
COPY ./docker/php/Caddyfile.dev /etc/frankenphp/Caddyfile

# Crear directorio para la aplicaci√≥n
RUN mkdir -p /var/www/html \
    && chown -R www-data:www-data /var/www/html \
    && chmod -R 755 /var/www/html

WORKDIR /var/www/html

# Configurar variables de entorno para desarrollo
ENV FRANKENPHP_CONFIG="worker ./public/index.php"
ENV APP_ENV=development

# Exponer puerto
EXPOSE 80

# Comando para desarrollo (sin worker mode para permitir hot reload)
CMD ["frankenphp", "run", "--config", "/etc/frankenphp/Caddyfile"]